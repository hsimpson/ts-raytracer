#ifndef MATERIAL_BASE_INC
#define MATERIAL_BASE_INC

#extension GL_GOOGLE_include_directive : enable

struct Material {
  vec4  baseColor;
  float roughness;
  float indexOfRefraction;
  uint  materialType;
  uint  textureIndex;
};

layout(std430, set = 0, binding = 4) buffer MaterialBuffer {
  Material materials[];
};

#endif  //MATERIAL_BASE_INC
